{
  "python.jediEnabled": false,
  "coc.preferences.formatOnSaveFiletypes": ["scala"],
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "languageserver": {
    "scala": {
      "command": "metals-vim",
      "filetypes": [ "scala", "sbt" ]
    },
    "go-langserver": {
      "command": "gopls",
      "args": ["serve"],
      "filetypes": ["go"],
      "trace.server": "verbose",
      "enable": true
    }
  }
}
