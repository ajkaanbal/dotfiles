Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

URxvt.scrollBar: off
! Fonts
#define fonts \
    xft:Sauce Code Powerline:pixelsize=12, \
    xft:DejaVu Sans Mono for Powerline:size=9, \
    xft:Liberation Mono Powerline:size=9, \
    xft:Droid Sans Mono for Powerline:size=9, \
    xft:Inconsolata for Powerline:size=9
URxvt.font: fonts
URxvt.boldFont: fonts
URxvt*termName:screen-256color
URxvt.jumpScroll: false
URxvt.saveLines: 32
URxvt.letterSpace: -1
URxvt.internalBorder: 0
URxvt*loginShell: true
URxvt.intensityStyles: false

!Copy to clipboard using Ctrl-Shift-c
URxvt.perl-ext-common:  default,clipboard,keyboard-select,fullscreen
URxvt.iso14755 : false
URxvt.clipboard.autocopy: true
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.keysym.C-A-V: perl:clipboard:paste_escaped

!keyboard select mode
URxvt.keysym.M-Escape: perl:keyboard-select:activate

!Fullscreen
URxvt.keysym.F11: perl:fullscreen:switch
